<%- include('../partials/header') %>
<br>
<br>

<section id="show-page">
    <div>Airline: <%= flight.airline %></div> 
    <div> Airport: <%= flight.airport %></div>
    <div> Flight Number: <%= flight.flightNo %></div>
    <div> Departs: <%= flight.departs.toLocaleString() %></div>
  </section>


  <br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Airport: </label>
  <select name="airport" >
      <option value="DFW">DFW</option>
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
  </select>
  <label>Arrives:</label>
  <input type="datetime-local" name="arrival" min="1900"> <br>
  <button type="submit">submit</button>
</form>

<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival.toLocaleString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>


 
  <table>
      <thead>
          <th>Seat</th>
          <th>Price</th>
        </thead>
        <tbody>
 
            <% tickets.forEach(function(t) { %> 
                <tr>
                    <td><%=t.seat%></td>
                    <td>$<%=t.price%></td>
                </tr>
            <% }) %>

        </tbody>
    </table>
